@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE HTML>
<html>
    <head>
         <meta charset="utf-8" />
         <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>

    <body>
      <!--Início do carrossel-->
      <div class="row justify-content-center">
        <div id="carouselStore" class="carousel slide mx-auto" data-bs-ride="carousel" data-bs-interval="4000">
            <ol class="carousel-indicators">
                <li data-bs-target="#carouselStore" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></li>
                <li data-bs-target="#carouselStore" data-bs-slide-to="1" aria-label="Slide 2"></li>
                <li data-bs-target="#carouselStore" data-bs-slide-to="2" aria-label="Slide 3"></li>
                <li data-bs-target="#carouselStore" data-bs-slide-to="3" aria-label="Slide 4"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="images/Material1.webp" class="d-block w-100" alt="material1">

                    <div class="carousel-caption d-none d-md-block">
                        <p>Vamos ajudar os estudante necessitados!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="images/Material2.webp" class="d-block w-100" alt="material2">

                    <div class="carousel-caption d-none d-md-block">
                        <p>Doe materiais escolares para quem precisa!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="images/Material3.webp" class="d-block w-100" alt="material3">

                    <div class="carousel-caption d-none d-md-block">
                        <p>Contribuições acadêmicas serão sempre bem-vindas!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="images/Ajuda.webp" class="d-block w-100" alt="ajuda">

                    <div class="carousel-caption d-none d-md-block">
                        <p>Vamos praticar a solidariedade!</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

      </div>
      <!--Fim do carrossel-->

    <div class="row">

        <div class="col-md-3">

            <h4>Doe livros!</h4>

            <label><img src="~/images/livros.webp" /></label>

        </div>
        <div class="col-md-3">

            <h4>Doe cadernos!</h4>

            <label><img src="~/images/caderno.webp" /></label>

        </div>
        <div class="col-md-3">

            <h4>Doe estojos</h4>

            <label><img src="~/images/estojo.webp" /></label>

        </div>

        <div class="col-md-3">

            <h4> Doe outros materiais!</h4>

            <label><img src="~/images/Materiais.webp" /></label>

        </div>

        </div>
      

    </body>
</html>