@model DonationAcademy.ViewModels.PedidoMaterialViewModel

@{
    ViewData["Title"] = "Itens";
    decimal totalPedido = 0;
}

<style>
    h1 {
        margin-top: 30px;
    }

    table tr {
        color: white;
    }
</style>

<h1>Produtos do Pedido</h1>
<hr />
<h4>Pedido : @Html.DisplayFor(model => @Model.Pedido.PedidoId)</h4>
<h4>Cliente: @Html.DisplayFor(model => @Model.Pedido.Nome)</h4>
<h4>Data: @Html.DisplayFor(model => @Model.Pedido.PedidoEnviado)</h4>

<br />
<table class="table">
    @foreach (var item in @Model.Pedido.PedidoItens)
    {
        totalPedido += (@item.Material.Preco * @item.Quantidade);
        <tr>
            <td align="right">
                <h5>@Html.DisplayFor(modelltem => item.Material.Nome)</h5>
            </td>
            <td align="right">
                <img src="@item.Material.ImagemUrl" class="img-fluid" height="100" width="100">
            </td>
            <td align="right">
                <h5>@string.Format("{0:C}", item.Material.Preco)</h5>
            </td>
            <td align="right">
                <h4>(@Html.DisplayFor(modelItem => item.Quantidade))</h4>
            </td>
        </tr>

    }
    <tr>
        <td colspan="2">&nbsp;</td>
        <td align="right">
            <h5>Total do Pedido : @string.Format("{0:C}", @totalPedido)</h5>
        </td>
    </tr>
</table>
<a asp-action="Index" style="color:black; background-color:#0DCAF0" class="btn btn-outline-info">Retornar</a>