@model ReflectionIT.Mvc.Paging.PagingList<DonationAcademy.Models.Material>

@{
    ViewData["Title"] = "Produtos";
}

<style>
    h3 {
        margin-top: 30px;
    }

    th, tr, a {
        color: white;
    }
</style>

<h3>Produtos</h3>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["Filter"]" />
    <br />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Procurar
    </button>
</form>
<br />
Total de Produtos: @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
<br />

<p>
    <a asp-action="Create">Adicionar produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDetalhada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemThumbnailUrl)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.EmEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMaterialPago)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoCurta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoDetalhada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.ImagemUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemThumbnailUrl)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.EmEstoque)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.IsMaterialPago)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaterialId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MaterialId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.MaterialId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
