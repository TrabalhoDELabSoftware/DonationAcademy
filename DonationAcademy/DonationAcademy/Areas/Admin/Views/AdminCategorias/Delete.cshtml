@model DonationAcademy.Models.Categoria

@{
    ViewData["Title"] = "Deletar";
}


<style>
    h1 {
        margin-top: 30px;
    }

    a {
        color: white;
    }

    dt, dd {
        margin-top: 20px !important;
    }

</style>


<h1>Excluir Categoria</h1>
<br />
<h3>Deseja realmente excluir essa categoria?</h3>
<br />
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
