@model DonationAcademy.Areas.Doador.Models.CategoriaDoador

@{
    ViewData["Title"] = "Deletar";
}

<style>
    h1 {
        margin-top: 30px;
    }

    a {
        color: white;
    }

    dt, dd {
        margin-top: 20px !important;
    }

</style>

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir essa categoria de doação?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaDoadorNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaDoadorNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaDoadorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
