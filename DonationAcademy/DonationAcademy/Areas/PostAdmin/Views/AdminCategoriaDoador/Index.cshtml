@model IEnumerable<DonationAcademy.Areas.Doador.Models.CategoriaDoador>

@{
    ViewData["Title"] = "Gestão de doações";
}

<style>
    h3 {
        margin-top: 30px;
    }

    th, tr, a {
        color: white;
    }
</style>

<h3>Gerenciar Categorias de Doação</h3>

<p>
    <a asp-action="Create">Criar Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaDoadorNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaDoadorNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaDoadorId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CategoriaDoadorId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaDoadorId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
