<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Donation Academy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DonationAcademy.styles.css" asp-append-version="true" />
    <link rel="icon" href="@Url.Content("~/icon/favicon.ico")" />
</head>
<body>
    @*AdminPost*@
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Material" asp-action="List">Início</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="PostAdmin" asp-controller="AdminCategoriaDoador" asp-action="Index">Categorias</a>
                            </li>

                            
                           <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                           </li>

                            <li class="nav-item" style="margin-left: 72%;">
                                <div class="dropdown">

                                    <a class="btn btn-light dropdown-toggle" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                        @User.Identity.Name
                                    </a>

                                    <ul class="dropdown-menu">

                                        <li>
                                            <a class="dropdown-item" style="color:black" asp-area="Post" asp-controller="DoadorPost" asp-action="Index">
                                                Voltar
                                            </a>
                                        </li>


                                        <li>
                                            @await Html.PartialAsync("_LoginPartial")
                                        </li>

                                    </ul>

                                </div>


                            </li>


                        }
                        else
                        {
                            @*Alinhamento a esquerda*@

                            @*<li><img style="height:42px; margin-top:auto;" src="~/images/Jk.png" /></li>*@
                            <li>
                                <span class="navbar-brand">DonationAcademy</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Contato" asp-action="ContatoView">Contato</a>
                            </li>

                            @*Alinhamento a direita*@
                            <li class="nav-item" style="margin-left: 63%;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Registre-se</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">

            <span class="copy"> &copy; @DateTime.Now.Year - <img style="height:30px;" src="~/images/DonationLogo.png" />Donation Academy</span>

            <nav>

                <ul style="list-style:none;" class="redes-sociais">
                    <li>
                        <a style="text-decoration:none; color:white;" href="" target="_blank">
                            <img src="/images/facebook-app-symbol.svg" />
                            @* <p style="font-size:12px; margin-top: 20px;">@@JkMisterG</p>*@
                        </a>
                    </li>
                    <li>
                        <a style="text-decoration:none; color:white;" href="" target="_blank">
                            <img src="/images/instagram.svg" />
                            @* <p style="font-size:12px; margin-top: 20px;">@@jkmistergoficial</p>*@
                        </a>
                    </li>
                </ul>

            </nav>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
