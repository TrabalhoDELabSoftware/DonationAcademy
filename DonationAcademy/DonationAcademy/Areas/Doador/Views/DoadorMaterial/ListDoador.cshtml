@model DoadorListViewModel

@{
    ViewData["Title"] = "Área de doação";
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        .img-fluid {
            height: 170px;
        }
    </style>
</head>

<body>

    <div>
        <h2>@Model.CategoriaDoadorAtual</h2>
    </div>

    <div class="row">

        @foreach (var doador in Model.Doadores)
        {
            <partial name="_MaterialDoadoresResumo" for="@doador" />
        }

    </div>

</body>
</html>